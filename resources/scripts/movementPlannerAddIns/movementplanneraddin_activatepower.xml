<?xml version="1.0"?>
<ui>
    <Panel>
        <x>0</x>
        <y>0</y>
        <width>settings.getWidth()</width>
        <height>settings.getHeight()</height>
        <childs>
            <Label>
                <x>20</x>
                <y>10</y>
                <width>settings.getWidth() / 2 - 40</width>
                <height>60</height>
                <text>MOVEMENTPLANNERADDIN_ACTIVATEPOWER.getName()</text>
                <font>"main"</font>
                <hAlign>"Middle"</hAlign>
                <fontSize>48</fontSize>
            </Label>
            <Label>
                <x>10</x>
                <y>lastY + lastHeight + 20</y>
                <width>200</width>
                <height>30</height>
                <text>MOVEMENTPLANNERADDIN_ACTIVATEPOWER.getPlayerLabel()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Spinbox>
                <x>lastX + lastWidth + 10</x>
                <y>lastY</y>
                <width>300</width>
                <tooltip>MOVEMENTPLANNERADDIN_ACTIVATEPOWER.getPlayerTooltip()</tooltip>
                <startValue>1</startValue>
                <infinite>0</infinite>

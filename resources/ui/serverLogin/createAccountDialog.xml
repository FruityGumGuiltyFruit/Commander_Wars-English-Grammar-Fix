<?xml version="1.0"?>
<ui>
    <Panel>
        <x>10</x>
        <y>10</y>
        <width>settings.getWidth() - 20</width>
        <height>settings.getHeight() - 80</height>
        <childs>
            <Label>
                <x>settings.getWidth() / 2 - 250</x>
                <y>settings.getHeight() / 2 - 180</y>
                <width>500</width>
                <height>30</height>
                <text>CreateAccountDialog.getCreateAccountText()</text>
                <font>"main"</font>
                <fontSize>48</fontSize>
            </Label>
            <Label>
                <x>settings.getWidth() / 2 - 310</x>
                <y>settings.getHeight() / 2 - 100</y>
                <width>220</width>
                <height>30</height>
                <text>CreateAccountDialog.getUsernameText()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Label>
                <x>lastX + lastWidth + 10</x>
                <y>lastY</y>
                <width>220</width>
                <height>30</height>
                <text>settings.getUsername()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Label>
                <x>settings.getWidth() / 2 - 310</x>
                <y>lastY + lastHeight + 20</y>
                <width>220</width>
                <height>30</height>
                <text>CreateAccountDialog.getPasswordText()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Passwordbox>
                <Id>PasswordBox</Id>
                <x>lastX + lastWidth + 10</x>
                <y>lastY</y>
                <width>400</width>
                <tooltip>CreateAccountDialog.getPasswordHelpText()</tooltip>
                <startValue>""</startValue>
                <onEvent>CreateAccountDialog.primaryPassword(input);</onEvent>
            </Passwordbox>
            <Label>
                <x>settings.getWidth() / 2 - 310</x>
                <y>lastY + lastHeight + 20</y>
                <width>220</width>
                <height>30</height>
                <text>CreateAccountDialog.getRepeatPasswordText()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Passwordbox>
                <Id>ConfirmBox</Id>
                <x>lastX + lastWidth + 10</x>
                <y>lastY</y>
                <width>400</width>
                <tooltip>CreateAccountDialog.getPasswordHelpText()</tooltip>
                <startValue>""</startValue>
                <onEvent>CreateAccountDialog.confirmPassword(input);</onEvent>
            </Passwordbox>
            <Label>
                <x>settings.getWidth() / 2 - 310</x>
                <y>lastY + lastHeight + 20</y>
                <width>220</width>
                <height>30</height>
                <text>CreateAccountDialog.getMailText()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Textbox>
                <Id>EmailBox</Id>
                <x>lastX + lastWidth + 10</x>
                <y>lastY</y>
                <width>400</width>
                <tooltip>CreateAccountDialog.getMailHelpText()</tooltip>
                <startValue>""</startValue>
                <onEvent>CreateAccountDialog.emailAdress(input);</onEvent>
            </Textbox>
            <Button>
                <Id>AbortButton</Id>
                <x>settings.getWidth() / 2 - 160</x>
                <y>lastY + lastHeight + 20</y>
                <width>150</width>
                <text>CreateAccountDialog.getAbortText()</text>
                <tooltip>CreateAccountDialog.getAbortHelpText()</tooltip>
                <onEvent>createAccount.exit();</onEvent>
            </Button>
            <Button>
                <Id>AccountButton</Id>
                <x>settings.getWidth() / 2 + 10</x>
                <y>lastY</y>
                <width>150</width>
                <text>CreateAccountDialog.getCreateText()</text>
                <tooltip>CreateAccountDialog.getCreateHelpText()</tooltip>
                <onEvent>CreateAccountDialog.createNewAccount()</onEvent>
            </Button>
        </childs>
    </Panel>
</ui>

<?xml version="1.0"?>
<ui>
    <Panel>
        <x>10</x>
        <y>10</y>
        <width>settings.getWidth() - 20</width>
        <height>settings.getHeight() - 80</height>
        <childs>
            <Label>
                <x>10</x>
                <y>10</y>
                <width>settings.getWidth() - 80</width>
                <text>QT_TRANSLATE_NOOP("GAME","Game Info")</text>
                <font>"main"</font>
                <fontSize>48</fontSize>
            </Label>
            <Label>
                <x>10</x>
                <y>lastY + lastHeight + 10</y>
                <width>settings.getWidth() - 80</width>
                <text>QT_TRANSLATE_NOOP("GAME","Description")</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <TextField>
                <x>10</x>
                <y>lastY + lastHeight + 10</y>
                <width>settings.getWidth() - 80</width>
                <text>currentMenu.getDescription()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </TextField>
            <Label>
                <x>10</x>
                <y>lastY + lastHeight + 10</y>
                <width>200</width>
                <text>QT_TRANSLATE_NOOP("GAME","Players:")</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
            <Label>
                <x>lastX + lastWidth + 10</x>
                <y>lastY</y>
                <width>200</width>
                <text>currentMenu.getPlayers() + " / " + currentMenu.getMaxPlayers()</text>
                <font>"main"</font>
                <fontSize>24</fontSize>
            </Label>
        </childs>
    </Panel>
    <Button>
        <x>settings.getWidth() / 2 - 75</x>
        <y>settings.getHeight() - 60</y>
        <width>150</width>
        <text>NetworkGameDataView.getOk()</text>
        <tooltip>NetworkGameDataView.getOkTooltip()</tooltip>
        <onEvent>currentMenu.close();</onEvent>
    </Button>
</ui>

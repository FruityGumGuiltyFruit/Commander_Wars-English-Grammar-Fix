<?xml version="1.0"?>
<ui>
    <Box>
        <x>settings.getStageWidth() / 2 - 176 / 2</x>
        <y>-45</y>
        <width>176</width>
        <height>46</height>
        <sprite>"panel"</sprite>
        <childs>
            <MoveInButton>
                <moveInSize>42</moveInSize>
                <y>10</y>
                <direction>1</direction>
                <scale>1</scale>
                <useY>true</useY>
            </MoveInButton>
            <IconButton>
                <x>10</x>
                <y>5</y>
                <sprite>"previous_unit"</sprite>
                <onEvent>
                    var map = quickButtonsMenu.getMap()
                    var input = map.getCurrentPlayer().getBaseGameInput();
                    if (input.getAiType() === GameEnums.AiTypes_Human)
                    {
                        input.gotoPrevious();
                    }
                </onEvent>
            </IconButton>
            <IconButton>
                <x>lastX + 40</x>
                <y>5</y>
                <sprite>"next_player"</sprite>
                <onEvent>
                    var map = quickButtonsMenu.getMap()
                    var input = map.getCurrentPlayer().getBaseGameInput();
                    if (input.getAiType() === GameEnums.AiTypes_Human)
                    {
                        input.nextTurn();
                    }
                </onEvent>
            </IconButton>
            <IconButton>
                <x>lastX + 40</x>
                <y>5</y>
                <sprite>"next_unit"</sprite>
                <onEvent>
                    var map = quickButtonsMenu.getMap()
                    var input = map.getCurrentPlayer().getBaseGameInput();
                    if (input.getAiType() === GameEnums.AiTypes_Human)
                    {
                        input.gotoNext();
                    }
                </onEvent>
            </IconButton>
            <IconButton>
                <x>lastX + 40</x>
                <y>5</y>
                <sprite>"cancel"</sprite>
                <onEvent>
                    var map = quickButtonsMenu.getMap()
                    var input = map.getCurrentPlayer().getBaseGameInput();
                    if (input.getAiType() === GameEnums.AiTypes_Human)
                    {
                        input.rightClickDown(-1, -1);
                    }
                </onEvent>
            </IconButton>
        </childs>
    </Box>
</ui>
